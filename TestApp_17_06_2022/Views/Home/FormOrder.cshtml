@model OrderFormViewModel

@{
    TempData["error"] = "Add order";
    var product = (List<ProductFormViewModel>)ViewBag.Product;
}

<div class="container">
    <form asp-action="FormOrder">
        <input type="hidden" asp-for="Id">
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Products</label>
                    <select asp-for="ProductId" class="form-control">
                        @foreach (var item in product)
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>Quantity</label>
                    <input type="number" asp-for="Count" class="form-control">
                    <span asp-validation-for="Count"></span>
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input type="number" asp-for="Price" class="form-control">
                    <span asp-validation-for="Price"></span>
                </div>
                <input type="submit" class="btn btn-primary" value="Submit"/>
            </div>
            <div class="col-sm-4"></div>
        </div>
    </form>
</div>